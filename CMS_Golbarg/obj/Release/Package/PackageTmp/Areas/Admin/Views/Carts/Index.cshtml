@model IEnumerable<CMS_Golbarg.Areas.Admin.Models.Cart>

@{
    ViewBag.Title = "لیست خرید ها";

}


<div class="box">
    <div class="box-header  with-border">
        

        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div class="box-body">
        <a class="btn btn-success" href="@Url.Action("Create")" style="margin-bottom: 5px;"><i class="fa fa-plus-square"></i>خرید فرمول</a>
        <br />


        <table id="cart-list" class="table table-striped table-bordered" cellspacing="0">
            <thead>


            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PayCoin.User.UserName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Mixer.Mix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PayCoin.Pay.TransitionOfBankNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegisterDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ConfirmDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDay)
                </th>

                <th>

                </th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PayCoin.User.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PayCoin.NumberOfCoins)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mixer.Mix)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PayCoin.Pay.TransitionOfBankNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegisterDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConfirmDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDay)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-success"><i class="fa fa-edit"> ویرایش</i></a>
                            <a href="@Url.Action("Details",new {id=item.Id})" class="btn btn-info"><i class="fa fa-info"> جزئیات</i></a>
                            <a href="@Url.Action("Delete",new {id=item.Id})" class="btn btn-danger"><i class="fa fa-remove"> حذف</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>

</div>


@section scripts{
    
    <script>
        $(document).ready(function () {
            $('#cart-list').DataTable({
                "language": {
                    "url": "/Scripts/DataTables/Languages/Persian.json"
                }
            });

        });

        
    </script>


}


