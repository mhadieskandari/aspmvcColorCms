@model IEnumerable<CMS_Golbarg.Core.Models.Mixer>

@{
    ViewBag.Title = "لیست فرمول های موجود";
    //Layout = "../Shared/_Layout.cshtml";
}
<div class="box">
    <div class="box-header  with-border">
        <h3 class="box-title">لیست فرمول های موجود</h3>
        <a class="btn btn-default btn-success pull-left" href="@Url.Action("Create")" style="color: white;"><i class="fa fa-plus" aria-hidden="true"></i></a>
    </div>
    <div class="box-body">
        <div class="form-inline">
            @using (Html.BeginForm())
            {

                <div class="">
                    <span class="">
                        @Html.Label("کد رنگ موی فعلی", htmlAttributes: new { @class = "control-label" })
                        @Html.Editor("ActualId", new { htmlAttributes = new { @class = "form-control" } })
                    </span>
                    <span class="">
                        @Html.Label("کد رنگ موی درخواستی", htmlAttributes: new { @class = "control-label" })
                        @Html.Editor("DestinationId", new { htmlAttributes = new { @class = "form-control" } })
                    </span>
                    <span class="" style="vertical-align: bottom" >
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </span>
                    <div class="">
                        
                    </div>
                </div>

            }
        </div>
        <hr />
        <div @*class="hidden-sm hidden-xs"*@>
            <table id="mixer-list" class="table table-striped table-bordered table-responsive table-hover">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mix)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeColor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Oxidan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ActualHairColorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DestinationHairColorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaintingWay.Name)
                        </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mix)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeColor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Oxidan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActualHairColor.InterNationalColorCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DestinationHairColor.InterNationalColorCode)
                            </td>

                            <th>
                                @Html.DisplayFor(modelItem => item.PaintingWay.Name)
                            </th>
                            <td>
                                <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-success"><i class="fa fa-edit"> ویرایش</i></a>
                                <a href="@Url.Action("Details",new {id=item.Id})" class="btn btn-info"><i class="fa fa-info"> جزئیات</i></a>
                                <a href="@Url.Action("Delete",new {id=item.Id})" class="btn btn-danger"><i class="fa fa-remove"> حذف</i></a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
