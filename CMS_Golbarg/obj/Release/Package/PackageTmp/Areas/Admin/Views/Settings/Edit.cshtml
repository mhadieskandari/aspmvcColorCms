@model CMS_Golbarg.Core.Models.Setting

@{
    ViewBag.Title = Model.Setting_Name+" ویرایش ";

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6 col-lg-offset-6 centering">

        <div class="box box-primary">
            <div class="box-header with-border">
                <b>@ViewBag.Title</b>
            </div>
            <div class="box-body">

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)



                    <div class="form-group">
                        @Html.LabelFor(model => model.Setting_Value, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Setting_Value, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Setting_Value, "", new { @class = "text-danger" })

                    </div>
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <button class="btn btn-default fa fa-save" title="ذخیره"></button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <a href="@Url.Action("index")" class="btn btn-default fa fa-backward" title="بازگشت به لیست"></a>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            </div>
        </div>
    </div>

}

