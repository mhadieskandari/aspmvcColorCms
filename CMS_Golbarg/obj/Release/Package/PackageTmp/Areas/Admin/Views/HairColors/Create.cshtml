@model CMS_Golbarg.Core.Models.HairColor

@{
    ViewBag.Title = "Create";

}


@using (Html.BeginForm("Create", "HairColors", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
        <div class="box box-primary">
            <div class="box-header with-border">
               <b>ایجاد رنگ موی جدید</b>
            </div>
            <div class="box-body">
                

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InterNationalColorCode, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.InterNationalColorCode, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.InterNationalColorCode, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.InterNationalColorName, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.InterNationalColorName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.InterNationalColorName, "", new { @class = "text-danger" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PersianColorCode, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.PersianColorCode, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PersianColorCode, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PersianColorName, htmlAttributes: new { @class = "control-label" })

                                    @Html.EditorFor(model => model.PersianColorName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PersianColorName, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.HairPic, htmlAttributes: new { @class = "control-label" })

                                    <input name="Image" type="file" class="form-control" />
                                    @*@Html.EditorFor(model => model.HairPic, new { htmlAttributes = new { @class = "form-control" } })*@
                                    @Html.ValidationMessageFor(model => model.HairPic, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <button class="btn btn-default fa fa-save" title="ذخیره"></button>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <a href="@Url.Action("index")" class="btn btn-default fa fa-backward" title="بازگشت به لیست"></a>
                        </div>
                    </div>
                </div>
                
                
            </div>
                

        </div>

        <div>
           
        </div>

}
       
        @section scripts{

            @Scripts.Render("~/bundles/jqueryval")



        }
