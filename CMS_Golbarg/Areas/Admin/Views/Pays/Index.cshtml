@model IEnumerable<CMS_Golbarg.Areas.Admin.Models.Pay>

@{
    ViewBag.Title = "Index";
    
}




<a class="btn btn-sm fa fa-plus-square " href="@Url.Action("Create","Pays")"></a>

<div class="box">
    <div class="box-header with-border">
        <p>لیست پرداخت ها</p>
    </div>
    <div class="box-body">

        <table id="Pays-list" class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.PayDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConfirmDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PayAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransitionOfBankNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InOutType)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PayDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConfirmDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PayAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransitionOfBankNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InOutType)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>



@section scripts{
    @Scripts.Render("~/bundles/adminlte-rtl_dataTables")
    <script>
                $(document).ready(function () {
                    $('#Pays-list').DataTable();
                });

                $.extend($.fn.dataTable.defaults, {
                    searching: true,
                    ordering: true
                });
    </script>


}
