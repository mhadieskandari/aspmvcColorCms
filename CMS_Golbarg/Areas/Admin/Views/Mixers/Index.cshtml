@model IEnumerable<CMS_Golbarg.Core.Models.Mixer>

@{
    ViewBag.Title = "لیست فرمول های موجود";
    //Layout = "../Shared/_Layout.cshtml";
}






<a class="btn btn-sm fa fa-plus-square " href="@Url.Action("Create","Mixers")"></a>

<div class="box">
    <div class="box-header  with-border">
        <h3 class="box-title">لیست فرمول های موجود</h3>
    </div>
    <div class="box-body">

        <div class="hidden-sm hidden-xs">
            <table id="mixer-list" class="table table-striped table-bordered col-md-12 col-lg-12">
                <thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mix)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeColor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Oxidan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ActualHairColorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DestinationHairColorID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaintingWay.Name)
                        </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mix)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeColor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Oxidan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ActualHairColor.InterNationalColorCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DestinationHairColor.InterNationalColorCode)
                            </td>

                            <th>
                                @Html.DisplayFor(modelItem => item.PaintingWay.Name)
                            </th>
                            <td>
                                <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-success"><i class="fa fa-edit"> ویرایش</i></a>
                                <a href="@Url.Action("Details",new {id=item.Id})" class="btn btn-info"><i class="fa fa-info"> جزئیات</i></a>
                                <a href="@Url.Action("Delete",new {id=item.Id})" class="btn btn-danger"><i class="fa fa-remove"> حذف</i></a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box box-default hidden-lg hidden-md">

            @foreach (var item in Model)
            {

                <div class="col-sm-12 col-xs-12 form-group box-header" style="background: gainsboro">
                    @*@Html.DisplayNameFor(model => model.Id)*@
                    @Html.DisplayFor(modelItem => item.Id)
                </div>
                <div class="box-body">
                    <div class="col-sm-12 col-xs-12 form-group " style="background: antiquewhite">
                        @Html.DisplayNameFor(model => model.Mix)
                        @Html.DisplayFor(modelItem => item.Mix)
                    </div>
                    <div class="col-sm-12 col-xs-12 form-group" style="background: floralwhite">
                        @Html.DisplayNameFor(model => model.DeColor)
                        @Html.DisplayFor(modelItem => item.DeColor)
                    </div>
                    <div class="col-sm-12 col-xs-12 form-group" style="background: antiquewhite">
                        @Html.DisplayNameFor(model => model.Oxidan)
                        @Html.DisplayFor(modelItem => item.Oxidan)
                    </div>
                    <div class="col-sm-12 col-xs-12 form-group" style="background: floralwhite">
                        @Html.DisplayNameFor(model => model.ActualHairColorID)
                        @Html.DisplayFor(modelItem => item.ActualHairColor.InterNationalColorCode)
                    </div>
                    <div class="col-sm-12 col-xs-12 form-group" style="background: antiquewhite">
                        @Html.DisplayNameFor(model => model.DestinationHairColorID)
                        @Html.DisplayFor(modelItem => item.DestinationHairColor.InterNationalColorCode)
                    </div>

                    <div class="col-sm-12 col-xs-12 form-group" style="background: floralwhite">
                        @Html.DisplayNameFor(model => model.PaintingWay.Name)
                        @Html.DisplayFor(modelItem => item.PaintingWay.Name)
                    </div>

                </div>

                <div class="box-footer" >
                    <div class="col-sm-12 col-xs-12 pull-right  form-group">
                        <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-success"><i class="fa fa-edit"> ویرایش</i></a>
                        <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-info"><i class="fa fa-info"> جزئیات</i></a>
                        <a href="@Url.Action("Delete", new {id = item.Id})" class="btn btn-danger"><i class="fa fa-remove"> حذف</i></a>

                    </div>
                </div>
                <br/>
                <hr/>

            }

        </div>




    </div>

</div>






@section scripts{
    @Scripts.Render("~/bundles/adminlte-rtl_dataTables")
    <script>
        $(document).ready(function () {
            $('#mixer-list').DataTable({
                "pageLength": 400,
                "language": {
                    "url": "/Scripts/DataTables/Languages/Persian.json"
                }
            });
        });

        $.extend($.fn.dataTable.defaults, {

            searching: true,
            ordering: true
        });
    </script>


}

