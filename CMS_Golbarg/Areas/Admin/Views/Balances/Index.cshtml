@model IEnumerable<CMS_Golbarg.Core.Models.Balance>

@{
    ViewBag.Title = "لیست حساب ها";

}

<div class="box">
    <div class="box-header  with-border">
        
        <h3 class="box-title"> @ViewBag.Title</h3>
    </div>
    <div class="box-body">

        <a class="btn btn-success" href="@Url.Action("Create")" style="margin-bottom: 5px;"><i class="fa fa-plus-square"></i> ایجاد حساب</a>
        <br />
        <table class="table" id="balance-list">
            <thead>

                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BalanceNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th></th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BalanceNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-success"><i class="fa fa-edit"> ویرایش</i></a>
                            <a href="@Url.Action("Details",new {id=item.Id})" class="btn btn-info"><i class="fa fa-info"> جزئیات</i></a>
                            <a href="@Url.Action("Delete",new {id=item.Id})" class="btn btn-danger"><i class="fa fa-remove"> حذف</i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>


    </div>

</div>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#balance-list').DataTable({
                "language": {
                    "url": "/Scripts/DataTables/Languages/Persian.json"
                }
            });

        });


    </script>


}
