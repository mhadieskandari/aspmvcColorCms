@model IEnumerable<CMS_Golbarg.Core.Models.PaintingWay>

@{
    ViewBag.Title = "روش های رنگ گذاری";
}

<a class="btn btn-sm fa fa-plus-square " href="@Url.Action("Create")"></a>


<div class="box">
    <div class="box-header  with-border">
        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div class="box-body">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-success"><i class="fa fa-edit"></i></a>
                        <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-info"><i class="fa fa-info"></i></a>
                        <a href="@Url.Action("Delete", new {id = item.Id})" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                        
                    </td>
                </tr>
            }

        </table>

    </div>

</div>

