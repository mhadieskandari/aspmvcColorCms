@model IEnumerable<CMS_Golbarg.Core.Models.Setting>

@{
    ViewBag.Title = "لیست تنظیمات";
    
}

<div class="box">
    <div class="box-header with-border">
        <p>@ViewBag.Title</p>
    </div>
    <div class="box-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Setting_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Setting_Value)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Setting_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Setting_Value)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit",new {item.id})" class="btn btn-success"><i class="fa fa-edit"></i></a>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>
