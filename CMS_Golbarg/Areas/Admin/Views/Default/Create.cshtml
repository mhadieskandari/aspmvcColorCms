@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_adminlte-rtl.cshtml";
}

<div class="content-wrapper" style="min-height: 947px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            General Form Elements
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-dashboard"></i> Home</a>
            </li>
            <li>
                <a href="#">Forms</a>
            </li>
            <li class="active">General Elements</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">

            <div class="col-md-6">
                <!-- Horizontal Form -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Horizontal Form</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                       

                        @*<form class="form-horizontal">*@
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">name</label>

                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(m=>m.name, new { @class = "form-control" })*@
                                        <input class="form-control" id="name" placeholder="name" type="text" name="name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="mobileNumber" class="col-sm-2 control-label">mobileNumber</label>

                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(m => m.mobileNumber, new { @class = "form-control" })*@
                                        <input class="form-control" id="mobileNumber" placeholder="mobileNumber" type="text" name="mobileNumber">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="url" class="col-sm-2 control-label">url</label>

                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(m => m.url, new { @class = "form-control" })*@
                                        <input class="form-control" id="url" placeholder="url" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="accessToken" class="col-sm-2 control-label">accessToken</label>

                                    <div class="col-sm-10">
                                        @*@Html.EditorFor(m => m.accessToken, new { @class = "form-control" })*@
                                        <input class="form-control" id="accessToken" placeholder="accessToken" type="text">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="type" class="col-sm-2 control-label">type</label>

                                    <div class="col-sm-10">
                                        @Html.DropDownList("type", new SelectList(ViewBag.ContactType, "id", "name"), new { @class = "form-control" })
                                        @*<input class="form-control" id="inputPassword3" placeholder="Password" type="password">*@
                                    </div>
                                </div>
                                
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-default">Create</button>
                            </div>
                            <!-- /.box-footer -->
                        @*</form>*@
                    }
                </div>
                <!-- /.box -->

            </div>
            <!--/.col (right) -->

            <div class="col-md-6">
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
