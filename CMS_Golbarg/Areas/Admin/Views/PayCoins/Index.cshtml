@model IEnumerable<CMS_Golbarg.Areas.Admin.Models.PayCoin>

@{
    ViewBag.Title = "لیست سکه ها";

}

<a class="btn btn-sm fa fa-plus-square " href="@Url.Action("Create")"></a>
<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">@ViewBag.Title</h3>
    </div>
    <div class="box-body">



        <table id="PayCoins" class="table">
            <thead>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pay.TransitionOfBankNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfCoins)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InOutType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegisterDate)
                </th>
                <th></th>
            </tr>

            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pay.TransitionOfBankNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfCoins)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InOutType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisterDate)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit",new {item.Id})" class="btn btn-success"><i class="fa fa-edit"> ویرایش</i></a>
                        <a href="@Url.Action("Details",new {item.Id})" class="btn btn-info"><i class="fa fa-info"> جزئیات</i></a>
                        <a href="@Url.Action("Delete",new {item.Id})" class="btn btn-danger"><i class="fa fa-remove"> حذف</i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
@section scripts{

    <script>
        $(document).ready(function() {
            $('#PayCoins').DataTable(
                {
                    "language": {
                        "url": "/Scripts/DataTables/Languages/Persian.json"
                    }
                });
            $('.check-box').bootstrapSwitch({
                onText: 'فعال',
                offText: 'غیرفعال',
                size: 'small',
                labelWidth: '10'
            });
        });

    </script>


}
