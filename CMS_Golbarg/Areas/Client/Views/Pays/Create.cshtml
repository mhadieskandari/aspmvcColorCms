@model CMS_Golbarg.ViewModel.CreatePayViewModel

@{
    ViewBag.Title = "ایجاد پرداخت جدید";

}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="centering col-md-6">
<div class="box box-primary">
        <div class="box-header with-border">
            <b>@ViewBag.Title</b>
        </div>
        <div class="box-body">



            <div class="form-horizontal">

                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PayPlanId, htmlAttributes: new { @class = "control-label" })

                            @Html.DropDownListFor(model => model.PayPlanId, new SelectList(Model.PayPlans, "Id", "PlanName"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PayPlanId, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Count, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.Count, new { htmlAttributes = new  { @class = "form-control" }})
                            @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "cursor:not-allowed;background-color:initial;" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })


                            @Html.HiddenFor(model => model.UserId)

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                           

                        </div>
                    </div>
                </div>


            </div>




        </div>





        <div class="box-footer">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <button class="btn btn-default fa fa-plus" title="ذخیره"></button>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a href="@Url.Action("index")" class="btn btn-default fa fa-backward" title="بازگشت به لیست"></a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

}


